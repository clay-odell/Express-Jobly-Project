{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "jobs",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 0
        },
        "title": {
            "type": "string"
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1.0
        },
        "company_handle": {
            "type": "string",
            "maxLength": 25
        }
    },
    "required": [
        "id",
        "title",
        "salary",
        "equity",
        "company_handle"
    ]
}